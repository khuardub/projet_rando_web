@page "/connexion"
@layout MainLayout
@inject Interfaces.IUtilisateur utilisateurService
@inject AuthenticationStateProvider authStateProvider
@inject IJSRuntime jsRuntime
@inject NavigationManager navManager

<PageTitle>Se Connecter</PageTitle>

<main>
    <div class="container pt-3">
        <div class="div-rend bg-dark container-fluid p-5 mb-5 mt-2">
            <h2 class="text-light text-center border-top border-bottom border-2">Connexion</h2>
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-9">
                        <EditForm Model="@user" OnValidSubmit="SeConnecter">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label for="courriel" class="form-label text-light">Courriel</label>
                                <InputText id="courriel" class="form-control" @bind-Value="user.Courriel" />
                                <ValidationMessage For="@(() => user.Courriel)" />
                            </div>
                            <div class="mb-5">
                                <label for="mdp" class="form-label text-light">Mot de Passe</label>
                                <InputText id="mdp" type="password" class="form-control" @bind-Value="user.MotDePasse" />
                                <ValidationMessage For="@(() => user.MotDePasse)" />
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-light">Se Connecter</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<style>
    body {
        background-image: url('tamara-schipchinskaya-7a7vjbap0uw-unsplash.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center center;
        height: 100%;
        margin: 0;
    }

    .login-card {
        background-color: rgba(255, 255, 255, 0.9);
        border-radius: 8px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.2);
    }

    .main-title {
        color: white;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

</style>

