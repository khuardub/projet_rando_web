@inherits LayoutComponentBase
@inject AuthenticationStateProvider authStateProvider
@inject NavigationManager navManager

<PageTitle>projet_rando_web</PageTitle>

<style>
    .header-footer {
        background-color: #343a40;
    }

    .navbar-brand {
        color: #fff;
    }

    .navbar-nav .nav-link {
        color: #adb5bd;
    }

        .navbar-nav .nav-link:hover {
            color: #ffffff;
        }

    .footer-text {
        font-size: 1rem;
        color: #ffffff;
    }
</style>

<header>
    <div class="pt-2 pb-2 header-footer">
        <div class="container">
            <div class="row">
                <div class="col">
                    <nav class="navbar navbar-expand-lg">
                        <div class="container-fluid">
                            <a class="navbar-brand" href="#">
                                <img src="/logo.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top me-2">
                                Randomax
                            </a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNav">
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="nav-link" href="/randonnees">Nos Randonnées</a>
                                    </li>
                                    
                                    <AuthorizeView>
                                        <Authorized>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/page_utilisateur">Ma page @context.User.Identity.Name</a>
                                            </li>
                                            <li class="nav-item">
                                              <a class="nav-link" href="/creation_randonnee">Création d'une randonnée</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" @onclick="Logout" href="javascript:void(0)">Se déconnecter</a>
                                            </li>
                                        </Authorized>
                                      
                                        <NotAuthorized>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/inscription">Inscrivez-vous</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/connexion">Connectez-vous</a>
                                            </li>
                                        </NotAuthorized>
                                      
                                    </AuthorizeView>
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>

@Body

<footer class="pt-4 pb-3 header-footer text-muted">
    <div class="container">
        <div class="row text-center footer-text">
            <p class="col">Fait par Keven Huard-Dubé, Mirella Lepasteur et Ziad Affan</p>
            <p class="col">Cégep Garneau - Technique de l'informatique 2023</p>
        </div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
